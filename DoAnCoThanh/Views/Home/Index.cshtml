        <div class=" row container-TinTuc">
            @foreach (var tt in ViewBag.TinTucs)
            {
                <div class="col-lg-4 TT" style="background-color: antiquewhite; box-sizing : border-box ; margin: 20px ; width : 28%"  >

                    <div style=" display: inline-block; ">
                        <a href="/TinTucs/ChiTiet?id=@tt.Id">
                            <img src="~/Resources/@tt.HinhAnh" alt="Alternate Text"  style=" height: 490px; width: 100%; margin-top: 10px;"/>
